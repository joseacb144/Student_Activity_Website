<%= render "devise/shared/error_messages", resource: resource %>

<div class="text-center">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name), class:"form-signin") do |f| %>
    <%= image_tag "main_logo", class:"mb-4", width:"72", height:"72" %>
    <h1 class="h3 mb-3 font-weight-normal">Please sign in</h1>
    <label for="inputEmail" class="sr-only">Email address</label>
    <%= f.email_field :email, class:"form-control", placeholder:"Email address", required:"required", autofocus:true %>
    <label for="inputPassword" class="sr-only">Password</label>
     <%= f.password_field :password, autocomplete: "current-password", class:"form-control", placeholder:"Password", required:true %>
    <div class="checkbox mb-3">
      <label>
       <% if devise_mapping.rememberable? %>
        <div class="field">
          <%= f.check_box :remember_me %>
          <%= f.label :remember_me %>
        </div>
       <% end %>
      </label>
    </div>
    <%=  f.submit "Sign in", class:"btn btn-lg btn-primary btn-block" %>
  <% end %>
    <div class="container help">
      <div class="row">
        <div class="col">
          <%= button_to "Sign Up", new_student_registration_path, method: "get" %>

        </div>
        <div class="col">
          <%= link_to "Forgot Password", new_student_password_path %>
        </div>
      </div>


      <p class="mt-5 mb-3 text-muted">&copy; 2020</p>

  </div>
</div>

